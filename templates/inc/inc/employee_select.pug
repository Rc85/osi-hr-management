#employee-select.tab-pane.user-main.p-3(role='tabpanel')
    h6.h-line.mb-3
        i.fa.fa-hand-pointer-o.fa-lg.mr-1(aria-hidden='true')
        | Select Employee
    .card.bg-transparent.mb-3
        .card-block
            //-- this needs to be recoded to an extent
            form#get-employee-goal(method="POST", action="/get-employee-goal")
                .form-group.d-inline-block.w-45.pl-1.align-top
                    select#manager-employee-select.form-control
                .form-group.d-inline-block.w-45.pl-1.align-top
                    select#manager-employee-date-select.form-control
                .form-group.d-inline-block.w-10.text-right.align-top
                    button.btn.btn-primary(type='submit')
                        i.fa.fa-search.fa-lg.mr-1(aria-hidden='true')
                        | View
    ul#ev-link.nav.nav-pills.h-line.mb-3.pb-3(role='tablist')
        li.nav-item
            a#ev-overview-link.nav-link.disabled.font-weight-bold(data-toggle='tab', role='tab', href='#employee-view', aria-expanded='false') 
                i.fa.fa-user.fa-lg.mr-1(aria-hidden='true')
                | Employee
        li.nav-item
            a#ev-goal-link.nav-link.disabled.font-weight-bold(data-toggle='tab', role='tab', href='#ev-goal-overview', aria-expanded='false') 
                i.fa.fa-question-circle-o.fa-lg.mr-1(aria-hidden='true')
                | Goal Status
        li.nav-item
            a#ev-plan-link.nav-link.disabled.font-weight-bold(data-toggle='tab', role='tab', href='#plan', aria-expanded='false') 
                i.fa.fa-table.fa-lg.mr-1(aria-hidden='true')
                | Development Plan
        li.nav-item
            a#ev-checkin-link.nav-link.disabled.font-weight-bold(data-toggle='tab', role='tab', href='#employee-checkins') 
                i.fa.fa-check-square-o.fa-lg.mr-1(aria-hidden='true')
                | Check-ins
        li.nav-item
            a#ev-goal-review-link.nav-link.disabled.font-weight-bold(data-toggle='tab', role='tab', href='#employee-goal-review') 
                i.fa.fa-file-text-o.fa-lg.mr-1(aria-hidden='true')
                | Goal Review
    .loading-parent#fetch-employee
        .loading
            .loading-status#fetch-employee-status
    #ev.tab-content
        #employee-view.tab-pane.active(role='tabpanel')
            h4#ev-emp-name.mb-3
                span#ev-emp-badge.badge.badge-info.ml-2
            #ev-emp-data.mb-3
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-id-card-o.fa-lg.mr-1(aria-hidden='true')
                        | Employee Number:
                    span#ev-emp-id
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-calendar.fa-lg.mr-1(aria-hidden='true')
                        | Hired Date:
                    span#ev-hired-date
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-building.fa-lg.mr-1(aria-hidden='true')
                        | Department:
                    span#ev-dept
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-sitemap.fa-lg.mr-1(aria-hidden='true')
                        | Division:
                    span#ev-division
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-id-badge.fa-lg.mr-1(aria-hidden='true')
                        | Title:
                    span#ev-title
                .w-50.d-inline-block.mb-2
                    label.font-weight-bold.w-40.text-dark-blue 
                        i.fa.fa-user.fa-lg.mr-1(aria-hidden='true')
                        | Manager:
                    span#ev-manager
        #ev-goal-overview.tab-pane(role='tabpanel')
            h6.h-line.mb-3
                i.fa.fa-bullseye.fa-lg.mr-1(aria-hidden='true')
                | Goal
            .card.bg-transparent.mb-3
                .card-block
                    .h5.font-weight-bold#ev-checkin-goal
            h6.h-line.mb-3
                i.fa.fa-dot-circle-o.fa-lg.mr-1(aria-hidden='true')
                | Actions
        #plan.tab-pane(role='tabpanel')
        #employee-checkins.tab-pane(role='tabpanel')
            h6.h-line.mb-3
                i.fa.fa-bullseye.fa-lg.mr-1(aria-hidden='true')
                | Goal
            .card.bg-transparent.mb-3
                .card-block
                    .h5.font-weight-bold#ev-checkin-goal
            h6.h-line.mb-3
                i.fa.fa-dot-circle-o.fa-lg.mr-1(aria-hidden='true')
                | Actions
            #ev-checkin-actions
        #employee-goal-review.tab-pane(role='tabpanel')
            h6.h-line.mb-3
                i.fa.fa-bullseye.fa-lg.mr-1(aria-hidden='true')
                | Goal
            .card.bg-transparent.mb-3
                .card-block
                    .h5.font-weight-bold#ev-gr-goal
            h6.h-line.mb-3
                i.fa.fa-dot-circle-o.fa-lg.mr-1(aria-hidden='true')
                | Actions
            #ev-gr-actions