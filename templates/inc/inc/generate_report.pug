#generate-report.tab-pane(role='tabpanel')
    form#report-form(method='POST', action='/get-report')
        .d-flex.justify-content-between
            .w-100.mb-2
                .card.bg-transparent
                    .card-body
                        //--ul#select-report-nav.nav.nav-tabs(role='tablist')
                            li.nav-item
                                a#by-division-link.nav-link.active(href='#by-division', data-toggle='tab', role='tab')
                                    i.fa.fa-sitemap.fa-lg.mr-1(aria-hidden='true')
                                    | By Division
                            li.nav-item
                                a#by-department-link.nav-link(href='#by-department', data-toggle='tab', role='tab')
                                    i.fa.fa-building.fa-lg.mr-1(aria-hidden='true')
                                    | By Department
                            li.nav-item
                                a#by-employee-link.nav-link(href='#by-employee', data-toggle='tab', role='tab')
                                    i.fa.fa-users.fa-lg.mr-1(aria-hidden='true')
                                    | By Employee
                        h6.text-dark-blue
                            i.fa.fa-calendar-minus-o.fa-lg.mr-1(aria-hidden='true')
                            span Select Period
                        .w-100.card.bg-transparent.mb-3
                            .card-body#report-period-div
                                select#report-period-select.form-control(name='report_period')
                        .d-flex.justify-content-between.align-items-center
                            #by-division.w-24.tab-pane.active(role='tabpanel')
                                h6.text-dark-blue
                                    i.fa.fa-sitemap.fa-lg.mr-1(aria-hidden='true')
                                    span Divisions
                                .position-relative
                                    .field-loading-screen.w-100.h-100.position-absolute.d-flex.align-items-center.justify-content-center.bg-dark-light
                                        .w-50.text-center
                                            div
                                                i.fa.fa-spinner.fa-pulse.fa-5x.fa-fw
                                            div Loading...
                                    select#report-division-select.w-100.form-control.mb-2(name='division', multiple, size='12')
                                .text-right
                                    button.btn.btn-info.mr-1(type='button') Select All
                                    button.btn.btn-info(type='button') Select None
                            .w-9.text-center
                                button#get-dept-button.btn.btn-primary(type='button')
                                    i.fa.fa-arrow-right.fa-lg(aria-hidden='true')
                            #by-department.w-24.tab-pane.position-relative(role='tabpanel')
                                h6.text-dark-blue
                                    i.fa.fa-building.fa-lg.mr-1(aria-hidden='true')
                                    span Departments
                                .position-relative
                                    .field-loading-screen.w-100.h-100.position-absolute.align-items-center.justify-content-center.bg-dark-light.d-none
                                        .w-50.text-center
                                    select#report-department-select.w-100.form-control.mb-2(name='department', multiple, size='12')
                                .text-right
                                    button.btn.btn-info.mr-1(type='button') Select All
                                    button.btn.btn-info(type='button') Select None
                            .w-9.text-center
                                button#get-employee-button.btn.btn-primary(type='button')
                                    i.fa.fa-arrow-right.fa-lg(aria-hidden='true')
                            #by-employee.w-24.tab-pane.show(role='tabpanel')
                                h6.text-dark-blue
                                    i.fa.fa-group.fa-lg.mr-1(aria-hidden='true')
                                    span Employees
                                .position-relative
                                    .field-loading-screen.w-100.h-100.position-absolute.align-items-center.justify-content-center.bg-dark-light.d-none
                                        .w-50.text-center
                                    select#report-employee-select.w-100.form-control.mb-2(name='employees', multiple, size='12')
                                .text-right
                                    button.btn.btn-info.mr-1(type='button') Select All
                                    button.btn.btn-info(type='button') Select None
            //--.w-49.mb-2
                .card.bg-transparent.h-100
                    .card-body#field-select
                        label.justify-content-start
                            i.fa.fa-align-justify.fa-lg.mr-1(aria-hidden='true')
                            | Select Fields
                        select#report-field-select.w-100.form-control.mb-2(name='fields', multiple, size='12')
                        .text-right
                            button.btn.btn-info.mr-1(type='button') Select All
                            button.btn.btn-info.mr-1(type='button') Select None
        .text-right.w-99
            button.btn.btn-primary(type='submit') Generate